@model List<MyToDo.Models.ToDoTask>
@{
    ViewData["Title"] = "ToDoIndex";
}

<h2>MyToDo list:</h2>

<div class="container">
    <div class="row">
        @foreach (var task in Model)
        {
            <div>
                <div class="d-flex justify-content-center">
                    <h4>@task.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    @task.Description
                </div>
            </div>

        }
    </div>
</div>